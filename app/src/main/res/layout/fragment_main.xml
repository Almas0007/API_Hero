<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mainImage"
        android:layout_width="300dp"

        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:background="@drawable/hero_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageStyle" />

    <TextView
        android:id="@+id/mainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Name:"
        android:textColor="@color/q_nedoblack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainId" />

    <TextView
        android:id="@+id/heroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Almas"
        android:textColor="@color/q_blue"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/mainName"
        app:layout_constraintTop_toTopOf="@+id/mainName" />

    <TextView
        android:id="@+id/mainFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="FullName:"
        android:textColor="@color/q_nedoblack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/mainName"
        app:layout_constraintTop_toBottomOf="@+id/mainName" />

    <TextView
        android:id="@+id/heroFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Utepov"
        android:textColor="@color/q_blue"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/mainFullName"
        app:layout_constraintTop_toTopOf="@+id/mainFullName" />

    <TextView
        android:id="@+id/mainId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:text="ID:"
        app:layout_constraintEnd_toStartOf="@+id/heroId"
        app:layout_constraintStart_toStartOf="@+id/mainImage"
        app:layout_constraintTop_toBottomOf="@+id/mainImage" />

    <TextView
        android:id="@+id/heroId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="007"
        app:layout_constraintStart_toEndOf="@+id/mainId"
        app:layout_constraintTop_toTopOf="@+id/mainId" />

    <Button
        android:id="@+id/randomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/q_blue"
        android:background="@drawable/corner_style"
        android:text="Random Hero"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="sans-serif"

        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>